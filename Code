#include <iostream>
#include <cmath>

using namespace std;

int main() {
    int choice;
    double num1, num2, result;
    char op;
    bool exitProgram = false;

    do {
        cout << " меню " << endl;
        cout << "1. Добавить" << endl;
        cout << "2. вычет " << endl;
        cout << "3. умножение" << endl;
        cout << "4. разделение" << endl;
        cout << "5. сила" << endl;
        cout << "6. квадратный корень" << endl;
        cout << "7. выход" << endl;
        cout << "выберите действия: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "напишите первую любую цифру: ";
                cin >> num1;
                cout << "напишите любую вторую цифру: ";
                cin >> num2;
                result = num1 + num2;
                cout << "результат: " << result << endl;
                break;
            case 2:
                cout << "напишите первую любую цифру: ";
                cin >> num1;
                cout << "напишите любую вторую цифру: ";
                cin >> num2;
                result = num1 - num2;
                cout << "результат: " << result << endl;
                break;
            case 3:
                cout << "напишите первую любую цифру: ";
                cin >> num1;
                cout << "напишите любую вторую цифру: ";
                cin >> num2;
                result = num1 * num2;
                cout << "результат: " << result << endl;
                break;
            case 4:
                cout << "напишите первую любую цифру: ";
                cin >> num1;
                cout << "напишите любую вторую цифру:: ";
                cin >> num2;
                if (num2 == 0) {
                    cout << "ошибка: нельзя разделать на ноль" << endl;
                } else {
                    result = num1 / num2;
                    cout << "результат: " << result << endl;
                }
                break;
            case 5:
                cout << "напишите первую любую цифру: ";
                cin >> num1;
                cout << "напишите экспонент: ";
                cin >> num2;
                result = pow(num1, num2);
                cout << "результат: " << result << endl;
                break;
            case 6:
                cout << "напишите любую цифру: ";
                cin >> num1;
                if (num1 < 0) {
                    cout << "Ошибка: невозможно извлечь квадратный корень из отрицательного числа" << endl;
                } else {
                    result = sqrt(num1);
                    cout << "результат: " << result << endl;
                }
                break;
            case 7:
                cout << "выход..." << endl;
                exitProgram = true;
                break;
            default:
                cout << "ошибка : неправылний выбор" << endl;
                break;
        }
        cout << endl;

        if (!exitProgram) {
            char choice;
            cout << "хотите продолжить? (y/n): ";
            cin >> choice;
            if (choice == 'n' || choice == 'N') {
                exitProgram = true;
                cout << "выход..." << endl;
            }
        }
    } while (!exitProgram);

    return 0;
}
