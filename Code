
import os
import random
import time
import sys

# Define the game board
board = []
board_width = 20
board_height = 20

# Define the snake
snake = []
snake_length = 3
snake_head = [0, 0]
snake.append(snake_head)

# Define the food
food = [0, 0]

# Define the direction
direction = 'right'

# Define the game loop
while True:
    # Clear the screen
    os.system('cls' if os.name == 'nt' else 'clear')

    # Draw the board
    for i in range(board_height):
        row = []
        for j in range(board_width):
            if [i, j] in snake:
                # Draw the snake
                row.append('O')
            elif [i, j] == food:
                # Draw the food
                row.append('X')
            else:
                # Draw the empty space
                row.append('.')
        board.append(row)

    # Print the board
    for row in board:
        print(' '.join(row))

    # Move the snake
    snake_head = [snake[0][0], snake[0][1]]
    if direction == 'up':
        snake_head[0] -= 1
    elif direction == 'down':
        snake_head[0] += 1
    elif direction == 'left':
        snake_head[1] -= 1
    elif direction == 'right':
        snake_head[1] += 1
    snake.insert(0, snake_head)

    # Check if the snake has collided with the wall
    if snake_head[0] < 0 or snake_head[0] >= board_height or snake_head[1] < 0 or snake_head[1] >= board_width:
        print('Game over!')
        sys.exit()

    # Check if the snake has collided with itself
    if snake_head in snake[1:]:
        print('Game over!')
        sys.exit()

    # Check if the snake has eaten the food
    if snake_head == food:
        # Generate new food
        food = [random.randint(0, board_height - 1), random.randint(0, board_width - 1)]
        # Increase the length of the snake
        snake_length += 1

    # Remove the tail of the snake
    if len(snake) > snake_length:
        snake.pop()

    # Wait for a short time
    time.sleep(0.1)
```

